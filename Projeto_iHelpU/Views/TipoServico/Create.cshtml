@model iHelpU.MODEL.Models.TipoServico

@{
    ViewData["Title"] = "Criar Tipo de Serviço";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Criar Tipo de Serviço</h1>
        <p class="text-muted">Adicione uma nova categoria de serviço para expandir as opções no sistema.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow p-4 rounded bg-light">
                <h4 class="text-primary mb-4">Detalhes do Tipo de Serviço</h4>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Ex.: Pintura, Jardinagem, etc." />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Criar" class="btn btn-primary btn-lg w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-link">Voltar à lista</a>
    </div>

    <div class="alert-info text-center mt-3">
        @{
            if (ViewData["Mensagem"] != null)

            {
                <p>@ViewData["Mensagem"]</p>
                ;

            }
        }
    </div>
    <div class="alert-danger text-center mt-3">
        @{
            if (ViewData["MensagemErro"] != null)

            {
                <p>@ViewData["MensagemErro"]</p>
                ;

            }
        }
    </div>

    <div class="text-center mt-5">
        <img src="~/Content/images/Curtir.png" alt="Curtir" class="img-fluid" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
