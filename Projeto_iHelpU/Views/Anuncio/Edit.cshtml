@model iHelpU.MODEL.ViewModel.AnuncioEditVM

@{
    ViewData["Title"] = "Editar Anúncio";
}

<div class="container-fluid">
    <!-- Menu Lateral -->
    <div class="sidebar">
        <h3>Menu</h3>
        <a href="@Url.Action("HomePage", "iHelpU")">Página Inicial</a>
        <a href="@Url.Action("Create", "Anuncio")">Solicitar Serviço</a>
        <a href="@Url.Action("ServicosCriados", "Anuncio")">Gerenciar Serviços</a>
        <a href="@Url.Action("ServicosPrestados", "Anuncio")">Histórico de Serviços</a>
        @if (User.Identity.IsAuthenticated)
        {
            <form method="post" asp-action="Logout" asp-controller="Auth" class="d-inline">
                <button type="submit" class="logout-button">
                    Sair
                </button>
            </form>
        }
    </div>

    <!-- Conteúdo Principal -->
    <div class="content">
        <h1>Editar Anúncio</h1>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Campo Nome do Serviço -->
                    <div class="form-group">
                        <label asp-for="NomeServico" class="control-label">Nome do Serviço</label>
                        <input asp-for="NomeServico" class="form-control" />
                        <span asp-validation-for="NomeServico" class="text-danger"></span>
                    </div>

                    <!-- Campo Descrição -->
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <!-- Dropdown Tipo de Serviço -->
                    <div class="form-group">
                        <label asp-for="TipoServicoId" class="control-label">Tipo de Serviço</label>
                        <select asp-for="TipoServicoId" class="form-control" asp-items="@(new SelectList(Model.TipoServicos, "Id", "Descricao"))"></select>
                        <span asp-validation-for="TipoServicoId" class="text-danger"></span>
                    </div>

                    <!-- Campo Usuário (somente leitura) -->
                    <div class="form-group">
                        <label class="control-label">Usuário</label>
                        <input type="text" value="@Model.UsuarioList" class="form-control" readonly />
                    </div>

                    <!-- Dropdown Status -->
                    <div class="form-group">
                        <label asp-for="IdStatus" class="control-label">Status</label>
                        <select asp-for="IdStatus" class="form-control" asp-items="@(new SelectList(Model.StatusList, "Id", "Descricao"))"></select>
                        <span asp-validation-for="IdStatus" class="text-danger"></span>
                    </div>

                    <!-- Campo Coordenada X -->
                    <div class="form-group">
                        <label asp-for="coordenada_x" class="control-label">Coordenada X</label>
                        <input asp-for="coordenada_x" class="form-control" />
                        <span asp-validation-for="coordenada_x" class="text-danger"></span>
                    </div>

                    <!-- Campo Coordenada Y -->
                    <div class="form-group">
                        <label asp-for="coordenada_y" class="control-label">Coordenada Y</label>
                        <input asp-for="coordenada_y" class="form-control" />
                        <span asp-validation-for="coordenada_y" class="text-danger"></span>
                    </div>

                    <!-- Botões -->
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <style>
        /* Menu lateral */
        .sidebar {
            width: 250px;
            background-color: #222;
            padding: 20px;
            position: fixed;
            height: 100%;
            left: 0;
            color: #fff;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin-bottom: 10px;
                border-radius: 5px;
                background-color: #444;
            }

                .sidebar a:hover {
                    background-color: #007bff;
                }

        .logout-button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            color: #fff;
            background-color: #dc3545;
            margin-top: 20px;
        }

        /* Conteúdo principal */
        .content {
            margin-left: 270px;
            padding: 20px;
            color: #ddd;
            background-color: #333;
            height: 100%;
        }

        .form-group label {
            font-weight: 500;
            color: #fff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }
    </style>
}
