@model iHelpU.MODEL.ViewModel.HomePageVM

@{
    if (User.Identity.IsAuthenticated)

    {
        <h2>Bem-vindo, @User.Identity.Name!</h2>
    }

    else

    {
        <h2>Usuário não autenticado</h2>
    }
}

<style>
    .home-container {
        display: flex;
        height: 100vh;
        background-color: #333;
        color: #fff;
        margin: 0; 
    }

    /* Menu lateral */
    .sidebar {
        width: 250px;
        background-color: #222;
        padding: 20px;
        position: fixed;
        height: 100%;
        left: 0;
    }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            background-color: #444;
        }

            .sidebar a:hover {
                background-color: #007bff;
            }

    
    .content {
        margin-left: 0; 
        padding: 20px;
        width: 100%;
        color: #ddd;
        margin-left: 250px; 
    }

    .welcome-message {
        font-size: 24px;
        margin-top: 20px;
    }

    .map-image {
        width: 100%;
        max-width: 600px;
        height: auto;
        margin: 20px auto;
    }

    .announcements {
        margin-top: 30px;
    }

    .announcement-item {
        background-color: #444;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 8px;
        color: #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: left;
    }

    .announcement-content {
        text-align: left;
        flex: 1;
    }

    .request-button, .details-button, .logout-button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        color: #fff;
    }

    .request-button {
        margin-top: 30px;
        background-color: #007bff;
    }

    .details-button {
        background-color: #28a745;
    }

    .logout-button {
        background-color: #dc3545; /* Cor vermelha para logout */
        margin-top: 20px;
    }
</style>

<div class="home-container">
    <!-- Menu Lateral -->
    <div class="sidebar">
        <h3>Menu</h3>
        <a href="@Url.Action("HomePage", "iHelpU")">Página Inicial</a>
        <a href="@Url.Action("Create", "Anuncio")">Solicitar Serviço</a>
        <a href="@Url.Action("ServicosCriados", "Anuncio")">Gerenciar Serviços</a>
        <a href="@Url.Action("ServicosPrestados", "Anuncio")">Histórico de Serviços</a>
        @if (User.Identity.IsAuthenticated)

        {
            <form method="post" asp-action="Logout" asp-controller="Auth" class="d-inline">
                <button type="submit" class="logout-button">
                    Sair
                </button>
            </form>
        }
    </div>

    <!-- Conteúdo Principal -->
    <div class="content">
        <div class="welcome-message">
            @Model.MensagemBemVindo
        </div>

        <img src="~/images/map-placeholder.jpg" alt="Mapa" class="map-image" />

        <div class="announcements">
            <h2>Anúncios de Serviços</h2>
            @foreach (var anuncio in Model.Anuncios)
            {
                <div class="announcement-item">
                    <div class="announcement-content">
                        <h3>@anuncio.NomeServico</h3>
                        <p>@anuncio.Descricao</p>
                    </div>
                    <button class="details-button" onclick="window.location.href='@Url.Action("Details", "Anuncio", new { id = anuncio.Id })'">
                        Ver Detalhes
                    </button>
                </div>
            }
        </div>
    </div>
</div>
